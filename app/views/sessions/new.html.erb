<h2>Log in</h2>

<% if flash[:message]%>
<%= flash[:message] %>
<%end%>

<%= form_for @user, url: '/login', method: 'post' do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br><br>
  <%= f.submit "Log in" %>
<% end %>

