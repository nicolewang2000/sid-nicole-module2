<h1>Book Club App Home Page</h1>

<div class="topnav">

<% if logged_in? %>
<p>Welcome <%= @user.full_name %> <%=link_to "Log Out", logout_path, method: :delete%>
</p>
<% else %>
<p>You are not logged in! <%=link_to "Log In", login_path%></p>
<%end%>

</div>

<% if logged_in? %>
<label>Your clubs:</label>
<ul>
<% @user.clubs.each do |club| %>
<li><%= link_to club.name, club_path(club)%> </li>
<%end%>
</ul>
<%= link_to "Browse Book Clubs", clubs_path%>
<%else%>

<label>All clubs:</label>
<ul>
<% @clubs.each do |club| %>
<li><%= link_to club.name, club_path(club)%> </li>
<%end%>
</ul>
<%end%>

